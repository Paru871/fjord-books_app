<h1><%= Report.model_name.human %></h1>
<table>
  <thead>
    <tr>
      <th><%= Report.human_attribute_name(:created_at) %></th>
      <th><%= Report.human_attribute_name(:user) %></th>
      <th><%= Report.human_attribute_name(:title) %></th>
      <th><%= Report.human_attribute_name(:content) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= l(report.created_at, format: :long) %>
        <td>
          <% if report.user.name.empty? %>
            <%= link_to report.user.email,report.user %>
          <% else %>
            <%= link_to report.user.name,report.user %>
          <% end %>
        </td>
        <td><%= report.title %></td>
        <td><%= report.content %></td>
        <td><%= link_to t('views.common.show'), report %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('views.common.new'), new_report_path %>
