<p id="notice"><%= notice %></p>

<h1><%= t('views.index.header.Books') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('views.index.label.Title') %></th>
      <th><%= t('views.index.label.Memo') %></th>
      <th><%= t('views.index.label.Author') %></th>
      <th><%= t('views.index.label.Picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('views.index.link.Show'), book %></td>
        <td><%= link_to t('views.index.link.Edit'), edit_book_path(book) %></td>
        <td><%= link_to t('views.index.link.Destroy'), book, method: :delete, data: { confirm: t('views.index.confirm.Are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('views.index.link.New Book'), new_book_path %>
